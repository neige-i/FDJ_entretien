<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    >

    <!--
        Use a ConstraintLayout as parent to benefit from
        the layout_constraintDimensionRatio attribute
        in order to give the image the same height as its width
    -->
    <ImageView
        android:id="@+id/team_badge_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/team_badge_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@android:color/darker_gray"
        tools:src="@tools:sample/avatars"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
